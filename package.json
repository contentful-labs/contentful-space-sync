{
  "name": "contentful-space-sync",
  "description": "Syncs Contentful spaces",
  "bin": "bin/space-sync",
  "scripts": {
    "build": "rimraf dist && mkdirp dist && babel lib --out-dir dist",
    "clean": "rimraf dist && rimraf coverage",
    "prepublish": "npm run build",
    "postpublish": "npm run clean",
    "pretest": "standard",
    "test": "npm run test:cover",
    "test:cover": "BABEL_ENV=test isparta cover test/runner",
    "test:only": "BABEL_ENV=test ./test/runner",
    "browser-coverage": "npm run test:cover && opener coverage/lcov-report/index.html",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "link": "mkdirp node_modules && ln -s ../../contentful-batch-libs/lib node_modules/contentful-batch-libs"
  },
  "dependencies": {
    "babel-polyfill": "^6.0.16",
    "bluebird": "^3.0.5",
    "contentful-batch-libs": "^1.2.0",
    "lodash": "^3.10.1",
    "npmlog": "^2.0.0",
    "yargs": "^3.27.0"
  },
  "devDependencies": {
    "babel": "^5.8.29",
    "babel-core": "^6.3.21",
    "babel-eslint": "^4.1.3",
    "babel-plugin-rewire": "^0.1.22",
    "cz-conventional-changelog": "^1.1.4",
    "isparta": "^3.5.3",
    "mkdirp": "^0.5.1",
    "opener": "^1.4.1",
    "require-all": "^2.0.0",
    "rimraf": "^2.4.3",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.2",
    "standard": "^5.3.1",
    "tape": "^4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/contentful/contentful-space-sync.git"
  },
  "keywords": [
    "contentful",
    "sync",
    "space"
  ],
  "author": "Tiago Rodrigues <tiago@contentful.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/contentful/contentful-space-sync/issues"
  },
  "homepage": "https://github.com/contentful/contentful-space-sync#readme",
  "standard": {
    "parser": "babel-eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
